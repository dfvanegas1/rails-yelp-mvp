<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @restaurant.name %></h1>
  </div>


  <p class="well"><%= @restaurant.address %></p>
  <p class="well"><%= @restaurant.phone_number %></p>
  <p class="well"><%= @restaurant.category %></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.rating %></li>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
<br>

  <hr>
  <%= link_to new_restaurant_review_path (@restaurant) do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> Add review
  <% end %>
  <hr>
  <%= link_to restaurants_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> Back to all restaurants
  <% end %>
</div>
